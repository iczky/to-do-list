<%- include('partials/header.ejs') %>
  <body>
    <div class="container">
      <header class="d-flex p-2 justify-content-between">
        <ul class="nav nav-pills d-flex">
          <li class="nav-item">
            <a href="#" class="nav-link active" aria-current="page">Today</a>
          </li>
          <li class="nav-item"><a href="#" class="nav-link">Work</a></li>
          <li class="nav-item"><a href="#" class="nav-link">History</a></li>
        </ul>
        <ul class="nav nav-pills d-flex">
          <li class="nav-item nav-link"><%= fullDate %></li>
        </ul>
      </header>
    </div>
    <div
      class="container text-center d-flex flex-column justify-content-center"
    >
      <div class="card m-2">
        <h1 class="mt-3">TO-DO-LIST</h1>
        <div class="m-4">
          <form action="/submit" method="post">
            <div class="form-group d-flex justify-content-center">
              <input
                type="text"
                name="to_do"
                placeholder="Put todolist"
                class="form-control"
                style="width: 50%"
              />
            </div>
            <div class="mt-4">
              <input
                type="submit"
                value="OK"
                class="btn btn-primary"
                style="width: 15%"
              />
            </div>
          </form>
        </div>
        <div class="d-flex justify-content-center">
          <div class="card m-3 align-items-center pt-3" style="width: 85%">
              
            <div class="mb-2 align-items-center" style="width: 25rem;">
              <% if (locals.to_do) { %>
                <% list_todo.reverse() %>
                  <% for (let i = 0;i<list_todo.length;i++) { %> 
                  <div class="card m-2 rounded-4" style="width: 100%;">
                    <div class="card-body d-flex">
                      <input type="checkbox" class="form-check-input" />
                        <p class="card-text ms-3"><%= list_todo[i] %></p>
                    </div>
                  </div>
                  <% } %>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <%- include('partials/footer.ejs') %>
